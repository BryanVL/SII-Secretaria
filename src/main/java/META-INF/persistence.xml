<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Secretaria" transaction-type="RESOURCE_LOCAL">
		<class>Secretaria.Alumno</class>
		<class>Secretaria.Grupo</class>
		<class>Secretaria.Asignatura</class>
		<class>Secretaria.Asignaturas_Matricula</class>
		<class>Secretaria.Centro</class>
		<class>Secretaria.Encuesta</class>
		<class>Secretaria.Expediente</class>
		<class>Secretaria.Grupos_por_Asignatura</class>
		<class>Secretaria.Idiomas</class>
		<class>Secretaria.Matricula</class>
		<class>Secretaria.Optativa</class>
		<class>Secretaria.Titulacion</class>
		<class>Secretaria.Clase</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
			<property name="javax.persistence.schema-generation.scripts.action" value="create"/>
			<property name="javax.persistence.schema-generation.scripts.create-target" value="createDDL.sql"/>
			<property name="javax.persistence.schema-generation.scripts.action" value="drop"/>
			<property name="javax.persistence.schema-generation.scripts.drop-target" value="dropDDL.sql"/>
			
		</properties>
	</persistence-unit>
</persistence>
