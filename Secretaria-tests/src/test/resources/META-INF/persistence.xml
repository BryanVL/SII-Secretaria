<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="SecretariaPU"
		transaction-type="RESOURCE_LOCAL">
		<class>jpa.Alumno</class>
		<class>jpa.Grupo</class>
		<class>jpa.Asignatura</class>
		<class>jpa.Asignaturas_Matricula</class>
		<class>jpa.Centro</class>
		<class>jpa.Encuesta</class>
		<class>jpa.Expediente</class>
		<class>jpa.Grupos_por_Asignatura</class>
		<class>jpa.Idiomas</class>
		<class>jpa.Matricula</class>
		<class>jpa.Optativa</class>
		<class>jpa.Titulacion</class>
		<class>jpa.Clase</class>
		<class>jpa.Usuario</class>
		<shared-cache-mode>NONE</shared-cache-mode>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/sii" />
			<property name="javax.persistence.jdbc.user" value="siiuser" />
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password" value="siipassword" />
			<property
				name="javax.persistence.sql-load-script-source"
				value="db-inicial.sql" />
		</properties>

	</persistence-unit>
</persistence>
